<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ViewScores">

    <TextView
        android:id="@+id/p1scores2"
        android:layout_width="184dp"
        android:layout_height="335dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvp2"
        app:layout_constraintVertical_bias="0.187"
        tools:layout_editor_absoluteX="211dp" />

    <TextView
        android:id="@+id/tvp2"
        android:layout_width="173dp"
        android:layout_height="34dp"
        android:text="Player 2:"
        android:textColor="#F41818"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="219dp"
        tools:layout_editor_absoluteY="96dp" />

    <TextView
        android:id="@+id/tvp1"
        android:layout_width="170dp"
        android:layout_height="36dp"
        android:text="Player 1:"
        android:textColor="#F11616"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="96dp" />

    <TextView
        android:id="@+id/p1scores"
        android:layout_width="179dp"
        android:layout_height="336dp"
        android:layout_marginTop="48dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/p1scores2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvp1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/back2game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:onClick="backtogameplay"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="199dp"
        android:layout_height="53dp"
        android:fontFamily="@font/amaranth_bold"
        android:gravity="center"
        android:text="Scores"
        android:textColor="#ED0303"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>