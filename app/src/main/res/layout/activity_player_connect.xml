<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    tools:context=".PlayerConnect">

    <TextView
        android:id="@+id/tvplayernotfound"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:text="Player Not Found"
        android:textColor="#000000"
        android:textSize="24sp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="317dp" />

    <TextView
        android:id="@+id/tvsearchplayer"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:text="Searching For Players"
        android:textColor="#000000"
        android:textSize="24sp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="97dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="#1B5E20"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="ConnectFour"
        tools:layout_editor_absoluteY="3dp" />

    <ProgressBar
        android:id="@+id/pbsearchplayer"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="176dp" />

    <TextView
        android:id="@+id/tvplayerfound"
        android:layout_width="243dp"
        android:layout_height="34dp"
        android:text="Player Found"
        android:textColor="#000000"
        android:textSize="24sp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="252dp" />

    <Button
        android:id="@+id/searchbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="377dp" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="304dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="426dp">

        <TextView
            android:id="@+id/lltv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/lltv"
            android:textColor="#000000"
            android:textSize="36sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>