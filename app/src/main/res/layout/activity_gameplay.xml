<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="4"
    android:background="#FFF3F3"
    android:backgroundTint="#000000"
    tools:context=".Gameplay">

    <Button
        android:id="@+id/viewscorebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="previewscore"
        android:text="View Scores"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gamelayout"
        app:layout_constraintVertical_bias="0.556" />

    <TextView
        android:id="@+id/p1tv"
        android:layout_width="114dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:hint="Player 1:"
        android:textColor="#F8F5F5"
        android:textColorHint="#EADCDC"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/gamelayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.953" />

    <TextView
        android:id="@+id/p2tv"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_marginEnd="12dp"
        android:hint="Player 2:"
        android:textColor="#ECE8E8"
        android:textColorHint="#ECDFDF"
        app:layout_constraintBottom_toTopOf="@+id/gamelayout"
        app:layout_constraintEnd_toStartOf="@+id/yellow2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.854" />

    <ImageView
        android:id="@+id/red2"
        android:layout_width="30dp"
        android:layout_height="37dp"
        app:layout_constraintBottom_toTopOf="@+id/gamelayout"
        app:layout_constraintEnd_toStartOf="@+id/p2tv"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toEndOf="@+id/p1tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88"
        app:srcCompat="@drawable/red2" />

    <ImageView
        android:id="@+id/yellow2"
        android:layout_width="27dp"
        android:layout_height="37dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/gamelayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.862"
        app:srcCompat="@drawable/yellow2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="16dp"
        android:text="Play Again"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.788"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gamelayout"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:id="@+id/gamelayout"
        android:layout_width="353dp"
        android:layout_height="344dp"
        android:scrollbarSize="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbarSize="4dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="41dp"
                android:layout_height="75dp"
                android:onClick="ivClick"
                app:srcCompat="@drawable/ic_launcher_foreground" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="48dp"
                android:layout_height="75dp"
